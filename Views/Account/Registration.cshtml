@model RegistrationModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<body>
    <div class="container">
        <div class="title">Registration</div>
        <div class="content">
            <form asp-action="Registration" asp-controller="Account" method="post">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Email</span>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Phone Number</span>
                        <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Enter your phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Address</span>
                        <input asp-for="Address" class="form-control" type="text" placeholder="Enter your address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Password</span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-box">
                        <span class="details">Confirm Password</span>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <hr>
                <div class="text-center">
                    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
                </div>

                <div class="button">
                    <input type="submit" value="Register" asp-action="RegistrationPage" asp-controller="Account">
                </div>

                <div class="text-center">
                    <p>Already have an account? <a href="/account/login">Sign in</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
